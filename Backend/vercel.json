{
  "version": 2,
  "builds": [
    {
      "src": "server.js",      # Your main entry file for Express (usually `server.js` or `app.js`)
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",      # Route API requests to serverless functions
      "dest": "/server.js"     # This points to your Express entry file
    }
  ]
}
